<p id="notice"><%= notice %></p>

<h1>Listing Detalle Facturas</h1>

<table>
  <thead>
    <tr>
      <th>Factura</th>
      <th>Cantidad</th>
      <th>Total</th>
      <th>Descuento</th>
      <th>Producto</th>
      <th>Servicio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @detalle_facturas.each do |detalle_factura| %>
      <tr>
        <td><%= detalle_factura.factura %></td>
        <td><%= detalle_factura.cantidad %></td>
        <td><%= detalle_factura.total %></td>
        <td><%= detalle_factura.descuento %></td>
        <td><%= detalle_factura.producto %></td>
        <td><%= detalle_factura.servicio %></td>
        <td><%= link_to 'Show', detalle_factura %></td>
        <td><%= link_to 'Edit', edit_detalle_factura_path(detalle_factura) %></td>
        <td><%= link_to 'Destroy', detalle_factura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

