<font face="comic sans ms"><h1 class="text-info">Editar <%= resource_name.to_s.humanize %></h1></font>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </div>
  
  <div class="field">
    <%= f.label :apellido %><br />
    <%= f.text_field :apellido %>
  </div>
  
  <div class="field">
    <%= f.label :usuario %><br />
    <%= f.text_field :nombreUsuario %>
  </div>
  
  <div class="field">
    <%= f.label :foto %><br />
    <%= f.file_field :foto %>
  </div>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>
  <h2>Menu Rapido</h2>
 
  <%= f.fields_for :menu_rapido do | subsidiary | %>
    <div class="bank_subsidiaries_fields">
      <div class="field">
        <%= f.label :usuario_id %><br>
        <%= subsidiary.text_field :usuario_id %>
      </div>
      <div class="field">
        <%= f.label :accesor1 %><br>
        <%= subsidiary.text_field :accesor1 %>
      </div>
      <div class="field">
        <%= f.label :accesor2 %><br>
        <%= subsidiary.text_field :accesor2 %>
      </div>
    
    <div class="field">
        <%= f.label :accesor3 %><br>
        <%= subsidiary.text_field :accesor3 %>
      </div>
      <div class="field">
        <%= f.label :accesor4 %><br>
        <%= subsidiary.text_field :accesor4 %>
      </div>
      <div class="field">
        <%= f.label :accesor5 %><br>
        <%= subsidiary.text_field :accesor5 %>
      </div>
      <div class="field">
        <%= f.label :acceso6 %><br>
        <%= subsidiary.text_field :acceso6 %>
      </div>
      <div class="field">
        <%= f.label :accesor7 %><br>
        <%= subsidiary.text_field :accesor7 %>
      </div>
      </div>
  <% end %>
  

  <div class="actions">
    <a><%= f.submit "Update", :class=>" fa fa-plus-circle fa-2x btn btn-border-info btn-rounded btn-lg" %></a>
    <a><%= link_to 'Atras', :back, :class=>" fa fa-arrow-circle-o-left fa-2x btn btn-border-info btn-rounded btn-lg" %></a>
  </div>
  
  
<% end %>
