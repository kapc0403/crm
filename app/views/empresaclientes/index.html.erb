<div class="panel panel-primary">
  <div class="panel-heading">
    <center><font><h1 class="text-primary.bg-primary">Lista de Clientes</h1></font></center>
  </div>
  <div class="row">
    <div class="col-md-10 col-md-offset-1 ">
      <div class="center-block no-float form-login padding_top">
        <table class="table table-bordered" id="datatable">
          <thead>
            <tr>
              <th colspan="6" style="text-align: left;" >
                <div class="actions">
                  <h4>
                  <button type="button-primary" class="fa fa-plus-circle btn btn-primary btn-rounded" data-toggle="modal" data-target="#modal-lg"> Nuevo Cliente</button>
                  <div class="modal fade" id="modal-lg" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        </div>
                        <div class="modal-body">
                          <%= render 'form' %>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                      </div>
                    </div>
                  </div>
                  </h4>
                </div>
              </th>
              <th colspan="3">
                <div class="input-group">
                  <div class="input-group-addon"><i class="fa fa-search fa" aria-hidden="true"></i></div>
                  <input id="filtrar" type="text" class="form-control" placeholder="Buscar">
                </div>
              </th>
            </tr>
          </thead>
          <thead>
            <tr class="info">
              <th>Persona</th>
              <th>Apellido</th>
              <th>Telefono</th>
              <th>Empresa</th>
              <th>Telefono</th>
              <th>Usuario</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody class="buscar">
            <% @empresaclientes.each do |empresacliente| %>
              <tr class="active">
                <td><%= empresacliente.personaNombre %></td>
                <td><%= empresacliente.personaApellido %></td>
                <td><%= empresacliente.personaTelefono %></td>
                <td><%= empresacliente.empresaNombre %></td>
                <td><%= empresacliente.empresaTelefono %></td>
                <td><%= empresacliente.usuario.nombre %></td>
                <td><%= link_to '', empresacliente, :class=>"fa fa-eye fa-1x" %></td>
                <td><%= link_to '', edit_empresacliente_path(empresacliente), :class=>"fa fa-pencil fa-1x" %></td>
                <td><%= link_to '', empresacliente, :class=>"fa fa-trash-o fa-1x", method: :delete, data: { confirm: 'Â¿Esta Seguro que desea Eliminar?' } %></td>
              </tr>
            <% end %>
          </tbody>
          <tfooter>
            <div class="panel panel-default">
              <tr style="text-align: left;" class="info">
              <td colspan = "9"><%= will_paginate @empresaclientes %></td>
            </tr>
            </div>
            
          </tfooter>
        </table>
      </div>
    </div>
  </div>
  <br>
</div>