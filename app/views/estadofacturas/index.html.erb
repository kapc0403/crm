<p id="notice"><%= notice %></p>

<h1>Listing Estadofacturas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estadofacturas.each do |estadofactura| %>
      <tr>
        <td><%= estadofactura.nombre %></td>
        <td><%= link_to 'Show', estadofactura %></td>
        <td><%= link_to 'Edit', edit_estadofactura_path(estadofactura) %></td>
        <td><%= link_to 'Destroy', estadofactura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

