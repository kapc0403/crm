<p id="notice"><%= notice %></p>

<font><h1 class="text-info">Ordenes</h1></font>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Orden</th>
        <th>Contacto</th>
        <th>Empresa</th>
        <th>Usuario</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @facturas.each do |factura| %>
        <tr>
          <td><%= factura.fecha %></td>
          <td><%= factura.ordencompra %></td>
          <td><%= factura.empresacliente.personaNombre %> <%= factura.empresacliente.personaApellido %></td>
          <td><%= factura.empresacliente.empresaNombre%></td>
          <td><%= factura.usuario.nombre %> <%= factura.usuario.apellido %></td>
          <td><%= link_to '', factura, :class=>"fa fa-eye fa-1x" %></td>
          <td><%= link_to '', edit_factura_path(factura), :class=>"fa fa-pencil fa-1x" %></td>
          <td><%= link_to '', factura, :class=>"fa fa-trash-o fa-1x", method: :delete, data: { confirm: 'Â¿Esta Seguro que desea Eliminar?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= will_paginate @facturas %>
  </div>
  
<br>

<div class="actions">
  <a><%= link_to ' Nueva Orden', new_factura_path, :class=>" fa fa-plus-circle fa-2x btn btn-primary" %></a>
</div>