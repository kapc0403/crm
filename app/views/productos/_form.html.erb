<%= form_for(@producto) do |f| %>
  <% if @producto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@producto.errors.count, "error") %> prohibited this producto from being saved:</h2>

      <ul>
      <% @producto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="row fac-item well">
        <div class="text-primary">
          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <div class="panel panel-primary">
              <div class="panel-heading">
              <center><font><h1>Datos Cliente Encargado</h1></font></center>
              </div>
            </div>
            
            <div class="col-md-2 col-md-offset-1">
              <div class="field form-group input-group">
  			    	  <div class="input-group-addon"><i class="fa fa-barcode" aria-hidden="true"></i></div>
                <%= f.text_field :codigo, placeholder: "Codigo: 84783", :class=>"form-control"%>
              </div>
            </div>
            <div class="col-md-4 col-md-offset-0">
              <div class="field form-group input-group">
  			    	  <div class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></div>
                <%= f.text_field :nombre, placeholder: "Nombre: Antivirus", :class=>"form-control"%>
              </div>
            </div>
            <div class="col-md-4 col-md-offset-0">
              <div class="field form-group input-group">
  			    	  <div class="input-group-addon"><i class="fa fa-industry" aria-hidden="true"></i></div>
                <%= f.text_field :nombre, placeholder: "Fabricante: Evolusie", :class=>"form-control"%>
              </div>
            </div>
          
          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <div class="field form-group input-group">
  			    	  <div class="input-group-addon"><i class="fa fa-laptop" aria-hidden="true"></i></div>
                <%= f.text_field :descripcion, placeholder: "Comentario del producto", :class=>"form-control"%>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-1 col-md-offset-1">
              <div class="field form-group input-group">
  			    	  <div class="input-group-addon"><i class="fa fa-bars" aria-hidden="true"></i></div>
                <%= f.text_field :cantidad, placeholder: "cantidad: 20", :class=>"form-control"%>
              </div>
            </div>
            <div class="col-md-4 col-md-offset-0">
              <div class="field form-group input-group">
  			    	  <div class="input-group-addon"><i class="fa fa-money" aria-hidden="true"></i></div>
                <%= f.text_field :precio, placeholder: "precio: 12000", :class=>"form-control"%>
              </div>
            </div>
            <div class="col-md-5 col-md-offset-0">
              <div class="field form-group input-group">
  			    	  <div class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></div>
                <%= f.text_field :proveedors_id, placeholder: "Proveeedor: Marcos Leal", :class=>"form-control"%>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <div class="field form-group input-group">
  			    	  <div class="input-group-addon"><i class="fa fa-bell-o" aria-hidden="true"></i></div>
                <%= f.text_field :disponibilidad, placeholder: "Disponibilidad: 24 horas, muchos, ect..", :class=>"form-control"%>
              </div>
            </div>
          </div>
          </div>
        </div>
      </div>
    </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="actions">
        <h4>
          <a><%= f.submit 'Guardar Producto', :class=>"btn btn-primary btn-block fa" %></a>
        </h4>
        
      </div>
    </div>
  </div>
  
<% end %>
