<%= form_for(@producto) do |f| %>
  <% if @producto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@producto.errors.count, "error") %> prohibited this producto from being saved:</h2>

      <ul>
      <% @producto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="row fac-item well">
        <div class="text-primary">
          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <center><font><h1 class="text-primary">Datos Cliente Encargado</h1></font></center>
            </div>
            <div class="col-md-2 col-md-offset-1">
              <div class="field">
                <%= f.label :"Codigo" %><br>
                <%= f.text_field :codigo, placeholder: "84783", :class=>"form-control"%>
              </div>
            </div>
            <div class="col-md-4 col-md-offset-0">
              <div class="field">
                <%= f.label :"Nombre" %><br>
                <%= f.text_field :nombre, placeholder: "Antivirus", :class=>"form-control"%>
              </div>
            </div>
            <div class="col-md-4 col-md-offset-0">
              <div class="field">
                <%= f.label :"Fabricante" %><br>
                <%= f.text_field :nombre, placeholder: "Evolusie", :class=>"form-control"%>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <div class="field">
                <%= f.label :"Descripcion" %><br>
                <%= f.text_field :descripcion, placeholder: "Comentario del producto", :class=>"form-control"%>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-1 col-md-offset-1">
              <div class="field">
                <%= f.label :"Cantidad" %><br>
                <%= f.text_field :cantidad, placeholder: "20", :class=>"form-control"%>
              </div>
            </div>
            <div class="col-md-4 col-md-offset-0">
              <div class="field">
                <%= f.label :"Precio" %><br>
                <%= f.text_field :precio, placeholder: "12000", :class=>"form-control"%>
              </div>
            </div>
            <div class="col-md-5 col-md-offset-0">
              <div class="field">
                <%= f.label :"Proveedor" %><br>
                <%= f.text_field :proveedors_id, placeholder: "Marcos Leal", :class=>"form-control"%>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <div class="field">
                <%= f.label :"Disponibilidad" %><br>
                <%= f.text_field :disponibilidad, placeholder: "24 horas, muchos, ect..", :class=>"form-control"%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="actions">
        <a><%= f.submit 'Guardar Producto', :class=>"btn btn-rouder-primary btn-block fa fa-2x" %></a>
      </div>
    </div>
  </div>
  
<% end %>
