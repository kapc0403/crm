<div class="panel panel-primary">
  <div class="panel-heading">
    <center><font><h1 class="text-primary.bg-primary">Lista de Productos</h1></font></center>
  </div>
  <div class="row">
    <div class="col-md-10 col-md-offset-1 ">
      <div class="center-block no-float form-login padding_top">
        <table class="table table-bordered" id="datatable">
          <thead>
            <tr>
              <th colspan="6" style="text-align: left;" >
                <div class="actions">
                  <h4>
                  <button type="button-primary" class="fa fa-plus-circle btn btn-primary btn-rounded" data-toggle="modal" data-target="#modal-lg"> Nuevo Producto</button>
                  <div class="modal fade" id="modal-lg" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        </div>
                        <div class="modal-body">
                          <%= render 'form' %>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                      </div>
                    </div>
                  </div>
                  </h4>
                </div>
              </th>
              <th colspan="3">
                <div class="input-group">
                  <div class="input-group-addon"><i class="fa fa-search fa" aria-hidden="true"></i></div>
                  <input id="filtrar" type="text" class="form-control" placeholder="Buscar">
                </div>
              </th>
            </tr>
          </thead>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Codigo</th>
        <th>Fabricante</th>
        <th>Disponibilidad</th>
        <th>Precio</th>
        <th>Cantidad</th>
        <th>Descripcion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @productos.each do |producto| %>
        <tr class="info">
          <td><%= producto.nombre %></td>
          <td><%= producto.codigo %></td>
          <td><%= producto.fabricante %></td>
          <td><%= producto.disponibilidad %></td>
          <td><%= producto.precio %></td>
          <td><%= producto.cantidad %></td>
          <td><%= producto.descripcion %></td>
          <td><%= link_to '', producto, :class=>"fa fa-eye fa-1x" %></td>
          <td><%= link_to '', edit_producto_path(producto), :class=>"fa fa-pencil fa-1x" %></td>
          <td><%= link_to '', producto, :class=>"fa fa-trash-o fa-1x", method: :delete, data: { confirm: 'Â¿Esta Seguro que desea Eliminar?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<%= will_paginate @productos %>
</div>
    </div>
  </div>
  <br>
</div>