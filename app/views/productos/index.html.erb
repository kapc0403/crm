<font><h1 class="text-primary">Lista de Productos</h1></font>
<div class="col-md-10 center-block no-float form-login padding_top">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Codigo</th>
        <th>Fabricante</th>
        <th>Disponibilidad</th>
        <th>Precio</th>
        <th>Cantidad</th>
        <th>Descripcion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @productos.each do |producto| %>
        <tr>
          <td><%= producto.nombre %></td>
          <td><%= producto.codigo %></td>
          <td><%= producto.fabricante %></td>
          <td><%= producto.disponibilidad %></td>
          <td><%= producto.precio %></td>
          <td><%= producto.cantidad %></td>
          <td><%= producto.descripcion %></td>
          <td><%= link_to '', producto, :class=>"fa fa-eye fa-1x" %></td>
          <td><%= link_to '', edit_producto_path(producto), :class=>"fa fa-pencil fa-1x" %></td>
          <td><%= link_to '', producto, :class=>"fa fa-trash-o fa-1x", method: :delete, data: { confirm: 'Â¿Esta Seguro que desea Eliminar?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<%= will_paginate @productos %>
<div class="actions">
  <a><%= link_to 'Nuevo Producto', new_producto_path, :class=>" fa fa-plus-circle fa-2x btn btn-border-primary btn-rounded btn-lg" %></a>
</div>