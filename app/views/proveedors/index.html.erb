<div class="panel panel-primary">
  <div class="panel-heading">
<center><font><h1 class="text-primary.bg-primary">Proveedores</h1></font></center>
</div>
<div class="row">
<div class="col-md-10 col-md-offset-1 ">
      <div class="center-block no-float form-login padding_top">
  <table class="table table-bordered" id="datatable">
    <thead>
            <tr>
              <th colspan="6" style="text-align: left;" >
                <div class="actions">
                  <h4>
                     <button type="button-primary" class="fa fa-plus-circle btn btn-primary btn-rounded" data-toggle="modal" data-target="#modal-lg"> Nuevo Proveedor</button>
                  <div class="modal fade" id="modal-lg" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        </div>
                        <div class="modal-body">
                          <%= render 'form' %>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                      </div>
                    </div>
                  </div>
                  </h4>
                </div>
              </th>
              <th colspan="3">
                <div class="input-group">
                  <div class="input-group-addon"><i class="fa fa-search fa" aria-hidden="true"></i></div>
                  <input id="filtrar" type="text" class="form-control" placeholder="Buscar">
                </div>
              </th>
            </tr>
          </thead>
    <thead>
      <tr class="info">
        <th>Cedula</th>
        <th>Nombre Cliente</th>
        <th>Telefono</th>
        <th>NIT</th>
        <th>Nombre Empresa</th>
        <th>Telefono</th>
        <th>Pagina Web</th>
        <th>Cuenta Contable</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody class="buscar">
      <% @proveedors.each do |proveedor| %>
        <tr>
          <td><%= proveedor.cedula %></td>
          <td><%= proveedor.personaNombre %></td>
          <td><%= proveedor.personaTelefono %></td>
          <td><%= proveedor.nit %></td>
          <td><%= proveedor.empresaNombre %></td>
          <td><%= proveedor.empresaTelefono %></td>
          <td><%= proveedor.paginaWeb %></td>
          <td><%= proveedor.cuentaContable %></td>
          <td><%= link_to '', proveedor, :class=>"fa fa-eye fa-1x" %></td>
          <td><%= link_to '', edit_proveedor_path(proveedor), :class=>"fa fa-pencil fa-1x" %></td>
          <td><%= link_to '', proveedor, :class=>"fa fa-trash-o fa-1x", method: :delete, data: { confirm: 'Â¿Esta Seguro que desea Eliminar?' } %></td>
        </tr>
      <% end %>
    </tbody>
    <tfooter>
              <tr style="text-align: left;" class="info">
              <td colspan = "9"><%= will_paginate @proveedors %></td>
            </tr>
          </tfooter>
  </table>
</div>
</div>
<br>
</div>
</div>