<%= form_for(@servicio) do |f| %>
  <% if @servicio.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@servicio.errors.count, "error") %> prohibited this servicio from being saved:</h2>

      <ul>
      <% @servicio.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="row fac-item well">
        <div class="text-primary">
          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <center><font><h1 class="text-primary">Datos de Servicios</h1></font></center>
            </div>
            <div class="col-md-5 col-md-offset-1">
              <div class="field">
                <%= f.label :"Codigo" %><br>
                <%= f.text_field :codigo, placeholder: "7563", :class=>"form-control"%>
              </div>
            </div>
            <div class="col-md-5 col-md-offset-0">
              <div class="field">
                <%= f.label :"Nombre" %><br>
                <%= f.text_field :nombre, placeholder: "Mantenimiento", :class=>"form-control"%>
              </div>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <div class="field">
                <%= f.label :"Descripción del servicio" %><br>
                <%= f.text_field :descripción, placeholder: "Se dara el mantenimiento acordado", :class=>"form-control"%>
              </div>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-2 col-md-offset-1">
              <div class="field">
                <%= f.label :"Precio" %><br>
                <%= f.text_field :precio, placeholder: "Se dara el mantenimiento acordado", :class=>"form-control"%>
              </div>
            </div>
            <div class="col-md-4 col-md-offset-0">
              <div class="field">
                <%= f.label :"Disponibilidad del servicio" %><br>
                <%= f.text_field :disponibilidad, placeholder: "Se dara el mantenimiento acordado", :class=>"form-control"%>
              </div>
            </div>
            <div class="col-md-4 col-md-offset-0">
              <div class="field">
                <%= f.label :"Usuario a cargo" %><br>
                <%= f.text_field :usuario_id, placeholder: "Se dara el mantenimiento acordado", :class=>"form-control"%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="actions">
        <a><%= f.submit 'Guardar Servicio', :class=>"btn btn-rouder-primary btn-block fa fa-2x" %></a>
      </div>
    </div>
  </div>
  
<% end %>
