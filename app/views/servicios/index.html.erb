<div class="panel panel-primary">
  <div class="panel-heading">
<font><h1>Lista de Servicios</h1></font>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1 ">
      <div class="center-block no-float form-login padding_top">
        <table class="table table-bordered" id="datatable">
          <thead>
            <tr>
              <th colspan="6" style="text-align: left;" >
                <div class="actions">
                  <h4>
        <button type="button-primary" class="fa fa-plus-circle btn btn-primary btn-rounded" data-toggle="modal" data-target="#modal-lg"> Nuevo Servicio</button>
                  <div class="modal fade" id="modal-lg" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        </div>
                        <div class="modal-body">
                          <%= render 'form' %>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div> 
      </h4>
      </th>
      <th colspan="3">
                <div class="input-group">
                  <div class="input-group-addon"><i class="fa fa-search fa" aria-hidden="true"></i></div>
                  <input id="filtrar" type="text" class="form-control" placeholder="Buscar">
                </div>
              </th>
    </thead>
    
    <thead>
      <tr  class="info">
        <th>Nombre</th>
        <th>Codigo</th>
        <th>Disponibilidad</th>
        <th>Precio</th>
        <th>Descripción</th>
        <th>Usuario</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @servicios.each do |servicio| %>
        <tr>
          <td><%= servicio.nombre %></td>
          <td><%= servicio.codigo %></td>
          <td><%= servicio.disponibilidad %></td>
          <td><%= servicio.precio %></td>
          <td><%= servicio.descripción %></td>
          <td><%= servicio.usuario %></td>
          <td><%= link_to '', servicio, :class=>"fa fa-eye fa-1x" %></td>
          <td><%= link_to '', edit_servicio_path(servicio), :class=>"fa fa-pencil fa-1x" %></td>
          <td><%= link_to '', servicio, :class=>"fa fa-trash-o fa-1x", method: :delete, data: { confirm: '¿Esta Seguro que desea Eliminar?' } %></td>
        </tr>
      <% end %>
    </tbody>
    <tfooter>
            <div class="panel panel-default">
              <tr style="text-align: left;" class="info">
              <td><%= will_paginate @uservicios %></td>
            </tr>
            </div>
            
          </tfooter>
        </table>
      </div>
    </div>
  </div>
  <br>
</div>