<font face="comic sans ms"><h1 class="text-info">Usuarios</h1></font>

<div class="col-md-10 center-block no-float form-login padding_top">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Rol</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.nombre %></td>
        <td><%= user.rol %></td>
        <td><%= link_to '', user, :class=>"fa fa-eye fa-1x" %></td>
        <td><%= link_to '', edit_usuario_path(user), :class=>"fa fa-pencil fa-1x" %></td>
        <td><%= link_to '', user, :class=>"fa fa-trash-o fa-1x", method: :delete, data: { confirm: 'Â¿Esta Seguro que desea Eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= will_paginate @users %>
<br>

<div class="actions">
  <a><%= link_to 'Nuevo Usuario', '/usuarios/sign_up', :class=>" fa fa-plus-circle fa-2x btn btn-border-info btn-rounded btn-lg" %></a>
</div>